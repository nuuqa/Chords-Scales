                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Width" To="70" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="Height" To="40" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
